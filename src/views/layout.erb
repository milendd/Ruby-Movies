<html>
	<head>
		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

		<link rel="stylesheet" href="/styles/main.css">
	</head>
	<body>
		<div class="row header">
			<header>
				<div class="menu-bar">
					<span class="home-link">
						<a href="/">Home</a>
						<a href="/users">Users</a>
						<a href="/movies">Movies</a>
						<a href="/celebrities">Celebrities</a>
					</span>
					
					<% if is_user? %>
						<strong>Hello, </strong><span><%= @user.username %></span>
						<a href="/logout" class="btn btn-primary">Logout</a>
					<% else %>
						<a href="/login" class="btn btn-primary">Login</a>
						<a href="/register" class="btn btn-primary">Register</a>
					<% end %>
				</div>
				
				<form method="get" action="/search" id="search-form">
					<input type="text" name="query" id="search-query" class="col-md-3" placeholder="Search movies or celebrities">
					<button id="search-button" type="submit">
						<img class="search-button-image" src="/pictures/search.jpg" />
					</button>
				  </div>
				</form>
			</header>
		</div>
		
		<% if @error %>
			<div class="alert alert-danger fade in alert-custom">
				<div class="col-md-12">
					<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a>
					<span><%= @error %></span>
					&nbsp;&nbsp;
				</div>
			</div>
		<% end %>
		
		<div id="content" class="row">
			<%= yield %>
		</div>
		
		<div class="row footer">
			<footer>FMI - Movies and actors. &copy; 2017</footer>
		</div>
		
		
    	<!-- jQuery -->
    	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    	
    	<!-- Latest compiled and minified Bootstrap -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

	</body>
</html>
