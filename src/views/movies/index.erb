<% if @movies.any? %>
  <h2 class="movie-heading">All movies:</h2>
  
  <% if admin? %>
  	<a href="/movies/add" class="btn btn-success add-btn">Add new</a>
  </span>
  <% end %>
  
  <div class="all-movies">
    <% @movies.each do |movie| %>
      <div class="movie-container">
        <img src="<%= "/movie-pics/img_#{movie.id}.jpg" %>" class="movie-picture"/>
        <div class="movie-details">
        	
          <% if admin? %>
            <a href="<%= "/movies/delete/#{movie.id}" %>" class="btn btn-danger delete-btn">Delete</a>
            <a href="<%= "/movies/edit/#{movie.id}" %>" class="btn btn-secondary edit-btn">Edit</a>
          <% end %>
          
          <strong>Title:</strong>
          <div>
          	<a href="<%= "/movies/#{movie.id}"%>"><%= movie.title %></a>
          </div>
          
          <strong>Year:</strong>
          <div><%= movie.year %></div>
          
          <strong>Duration:</strong>
          <div><%= movie.duration %></div>
          
          <strong>Description:</strong>
          <div><%= movie.description %></div>
          
          <strong>Genre:</strong>
          <div><%= movie.genre %></div>
        </div>
        <div class="clear-fix"></div>
      </div>
    <% end %>
  </div>
  
<% else %>
  <p>No movies available.</p>
<% end %>
