<% if @movie %>
  <h1>Movie data:</h1>
  <div class="movie-container">
    <img src="<%= "/movie-pics/img_#{@movie.id}.jpg" %>" class="movie-picture"/>
    <div class="movie-details">
      <div>Id: <%= @movie.id %></div>
    	
      <strong>Title:</strong>
      <div><%= @movie.title %></div>
      
      <strong>Year:</strong>
      <div><%= @movie.year %></div>
      
      <strong>Description:</strong>
      <div><%= @movie.description %></div>
      
      <strong>Genre:</strong>
      <div><%= @movie.genre %></div>
      
      <% if @director %>
        <strong>Director:</strong>
        <div>
          <a href="<%= "/celebrities/#{@director.celebrity_id}" %>"><%= @director.celebrity.name %></a>
        </div>
      <% end %>
    </div>
    <div class="clear-fix"></div>
  </div>
  
<% else %>
  <p>No such movie found.</p>
<% end %>

<h3>Actors:</h3>
<table>
  <% @actors.each do |actor| %>
    <tr>
      <td>
      	<a href="<%= "/celebrities/#{actor.celebrity_id}" %>"><%= actor.celebrity.name %></a>
      </td>
    </tr>
  <% end %>
</table>

<h3>Writers:</h3>
<table>
  <% @writers.each do |writer| %>
    <tr>
      <td>
      	<a href="<%= "/celebrities/#{writer.celebrity_id}" %>"><%= writer.celebrity.name %></a>
      </td>
    </tr>
  <% end %>
</table>
