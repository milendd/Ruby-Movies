<% if @error %>
<div class="col-md-12">
	<div class="alert alert-danger fade in alert-custom">
		<a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a>
		<span><%= @error %></span>
		&nbsp;&nbsp;
	</div>
</div>
<% end %>

<div class="col-md-6">
	<form action="/register" class="form-horizontal" method="post" role="form">
		<div class="row form-group">
			<div>
				<label class="col-md-3 col-sm-4 control-label" for="username">Username</label>
			</div>
			<div class="col-md-4 col-sm-5">
				<input class="form-control" id="username" name="username" type="text" value="<%= params[:username] %>"/>
			</div>
		</div>
		
		<div class="row form-group">
			<div>
				<label class="col-md-3 col-sm-4 control-label" for="email">Email</label>
			</div>
			<div class="col-md-4 col-sm-5">
				<input class="form-control" id="email" name="email" type="text" value="<%= params[:email] %>"/>
			</div>
		</div>
		
		<div class="row form-group">
			<div>
				<label class="col-md-3 col-sm-4 control-label" for="password">Password</label>
			</div>
			<div class="col-md-4 col-sm-5">
				<input class="form-control" id="password" name="password" type="password" value="<%= params[:password] %>" />
			</div>
		</div>
		
		<div class="row form-group">
			<div>
				<label class="col-md-3 col-sm-4 control-label" for="confirm_password">Confirm password</label>
			</div>
			<div class="col-md-4 col-sm-5">
				<input class="form-control" id="confirm_password" name="confirm_password" type="password" value="<%= params[:confirm_password] %>" />
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-md-offset-3 col-sm-offset-4 col-md-3">
				<button type="submit" class="btn btn-primary">Register</button>
			</div>
		</div>
	</form>
</div>
